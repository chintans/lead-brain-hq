---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Bring Your Leads to Life with AI-Powered Conversion Funnels
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Transform curious visitors into qualified customersâ€”automatically. Our platform helps you create intelligent landing pages that do more than just capture email addresses.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-rocket" />
        Get Started Now
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="#how-it-works"
        class="flex gap-1 items-center justify-center">
        <Icon class="text-black w-4 h-4" name="bx:bxs-info-circle" />
        How It Works
      </Link>
    </div>
  </div>
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="AI Conversion Funnel Illustration"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
</main>
